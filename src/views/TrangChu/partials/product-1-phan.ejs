<!-- <div class="col-lg-12"> -->
    <!-- single-product-wrap start -->
    <div class="single-product-wrap">
        <div class="product-image">
            <a href="/detailt-sp-linkUrl?idDetailTrangMoi=<%= sp._id %>">
                <img width="100" height="240" src="images/upload/<%= getRelativeImagePath(sp.Icon[0]) %>" alt="image product" >
            </a>
            <% if (sp.GiamGiaSP > 0) { %>
            <span class="sticker font-weight-bold">-<%= sp.GiamGiaSP %>%</span>
            <% } %>
        </div>
        <div class="product_desc">
            <div class="product_desc_info">
                <div class="product-review">
                    <h5 class="manufacturer">
                        <a href="shop-left-sidebar.html"><%= sp.IdHangSX.TenHangSX %></a>
                    </h5>
                    <div class="rating-box">
                        <ul class="rating">
                            <li><i class="fa fa-star-o"></i></li>
                            <li><i class="fa fa-star-o"></i></li>
                            <li><i class="fa fa-star-o"></i></li>
                            <li><i class="fa fa-star-o"></i></li>
                            <li class="no-star"><i class="fa fa-star-o"></i></li>
                        </ul>
                    </div>
                </div>
                <h4><a class="product_name" href="/detailt-sp-linkUrl?idDetailTrangMoi=<%= sp._id %>"><%= sp.TenSP %></a></h4>
                <div class="price-box">
                    <!-- <span class="new-price">$46.80</span> -->
                    <%
                        let sale = sp.sizeQuantity[0].price * (sp.GiamGiaSP / 100)
                    %>
                    <span class="new-price new-price-2"><%= formatCurrency(sp.sizeQuantity[0].price - sale) %></span>
                    <% if (sp.GiamGiaSP > 0) { %>
                    <span class="old-price"><%= formatCurrency(sp.sizeQuantity[0].price) %></span>
                    <% } %>
                </div>
            </div>
            <div class="add-actions">
                <ul class="add-actions-link">
                    <li class="add-cart active"><a href="/detailt-sp-linkUrl?idDetailTrangMoi=<%= sp._id %>">Đi Mua Thôi</a></li>
                    <li><a class="links-details" href="wishlist.html"><i class="fa fa-heart-o"></i></a></li>
                    <li>
                        <input type="hidden" name="idDetailTaiTrang" value="<%= sp._id %>">
                        <a id="viewDetailt<%= sp._id %>" 
                            href="#" 
                            data-product-id="<%= sp._id %>"  
                            data-toggle="modal" 
                            data-target="#modalDetails" 
                            title="Quick view" > <i class="fa fa-eye"></i>
                        </a>
                    </li>                                                                                
                </ul>
            </div>
        </div>
    </div>
    <!-- single-product-wrap end -->
<!-- </div> -->

