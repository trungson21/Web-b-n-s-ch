<!-- Modal thêm thể loại -->
<form enctype="multipart/form-data" id="createLoaiSP">
    <div class="modal fade" id="exampleModalToggle" aria-hidden="true" aria-labelledby="exampleModalToggleLabel" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalToggleLabel" style="color: navy;">Thêm loại sản phẩm?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-11">
                            <div class="form-group">
                                <label for="TenLoaiSP" class="form-control-label" style="font-size: 14px;">Tên thể loại <span style="color: red;">*</span></label>
                                <input class="form-control" id="TenLoaiSP" name="TenLoaiSP" type="text" placeholder="Nhập tên thể loại ..." required>
                            </div>
        
                            <div class="form-group">
                                <label for="Icon" class="form-control-label" style="font-size: 14px;">Icon <span style="color: red;">*</span></label>
                                <input class="form-control" id="Icon" name="Icon" type="file" required>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" data-bs-dismiss="modal" aria-label="Close">Không</button>
                    <button type="submit" class="btn btn-primary" >Xác nhận thêm</button>
                </div>
            </div>                            
        </div>
    </div>
</form>

<!-- Modal thêm hãng sản xuất -->
<div class="modal fade" id="hangSxModalToggle" aria-hidden="true" aria-labelledby="hangSxModalToggleLabel" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="hangSxModalToggleLabel" style="color: navy;">Thêm danh mục</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-11">
                        <div class="form-group">
                            <label for="TenHangSX" class="form-control-label" style="font-size: 14px;">Tên danh mục <span style="color: red;">*</span></label>
                            <input class="form-control" id="TenHangSX" name="TenHangSX" type="text" placeholder="Nhập tên danh mục ..." required>
                        </div>  
                        
                        <div class="form-group">
                            <label for="IdLoaiSP" class="form-control-label" style="font-size: 14px;">Thể loại <span style="color: red;">*</span></label>
                            <select id="IdLoaiSP" name="IdLoaiSP" class="form-control" aria-label="Default select example" multiple style="font-size: 15px;color: navy;height: 200px;">                                   
                                <% loaiSP.forEach(function(loaiSP) { %> 
                                <option value="<%= loaiSP._id %>"><%= loaiSP.TenLoaiSP %></option>
                                <% }); %>                             
                            </select>
                        </div>  
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" data-bs-dismiss="modal" aria-label="Close">Không</button>
                <button type="button" onclick="createHangSX()" class="btn btn-primary" >Xác nhận thêm</button>
            </div>
        </div>                            
    </div>
</div>


