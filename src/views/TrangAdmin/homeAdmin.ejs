   <canvas id="myPieChart" width="500" height="500"></canvas>

   <script>
    // Gọi API và lấy dữ liệu doanh thu
    fetch('/get-doanh-thu')
        .then(response => response.json())
        .then(data => {
            const salesData = data.data;  // Dữ liệu doanh thu nhận được từ API

            // Tạo labels và data cho biểu đồ
            const labels = salesData.map(item => `${item._id.month}-${item._id.year}`);
            const dataValues = salesData.map(item => item.totalSales);
            const ordersCount = salesData.map(item => item.totalOrders);  // Tổng số đơn hàng

            // Cấu hình biểu đồ
            const chartData = {
                labels: labels,
                datasets: [{
                    label: 'Doanh thu theo tháng',
                    data: dataValues,
                    backgroundColor: [
                        'rgb(255, 99, 132)', 
                        'rgb(54, 162, 235)', 
                        'rgb(255, 205, 86)', 
                        'rgb(75, 192, 192)', 
                        'rgb(153, 102, 255)', 
                        'rgb(255, 159, 64)', 
                        'rgb(255, 99, 132)', 
                        'rgb(54, 162, 235)', 
                        'rgb(255, 205, 86)', 
                        'rgb(75, 192, 192)', 
                        'rgb(153, 102, 255)', 
                        'rgb(255, 159, 64)'
                    ],
                    hoverOffset: 4
                }]
            };

            const options = {
                responsive: true,  // Cho phép thay đổi kích thước theo kích thước màn hình
                plugins: {
                    legend: {
                        position: 'top',  // Vị trí legend
                        labels: {
                            font: {
                                size: 20  // Điều chỉnh kích thước font trong legend
                            }
                        }
                    },
                    tooltip: {
                        callbacks: {
                          label: function(tooltipItem) {
                              // Chuyển giá trị raw (số) thành tiền VNĐ
                              const formattedValue = new Intl.NumberFormat('vi-VN', {
                                  style: 'currency',
                                  currency: 'VND',
                              }).format(tooltipItem.raw);  // Định dạng giá trị

                              // Lấy số đơn hàng từ dữ liệu `ordersCount`
                              const totalOrders = ordersCount[tooltipItem.dataIndex];
                              return `${tooltipItem.label}: ${formattedValue} | Số đơn hàng: ${totalOrders}`;
                          }
                        },
                        // Thay đổi kích thước font của label trong tooltip
                        bodyFont: {
                            size: 18,  // Kích thước chữ trong tooltip
                        },
                        titleFont: {
                            size: 16,  // Kích thước chữ tiêu đề trong tooltip
                        }
                    }
                },
                maintainAspectRatio: false,  // Đảm bảo tỷ lệ khung hình có thể thay đổi
                cutout: '70%'  // Làm cho biểu đồ trông nhỏ lại bằng cách cắt bớt phần giữa (hình tròn không hoàn chỉnh)
            };

            // Lấy element canvas và tạo biểu đồ hình tròn
            const ctx = document.getElementById('myPieChart').getContext('2d');
            const myPieChart = new Chart(ctx, {
                type: 'pie',
                data: chartData,
                options: options
            });
        })
        .catch(error => {
            console.error('Error fetching sales data:', error);
        });
