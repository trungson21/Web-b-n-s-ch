<div class="slider-with-banner">
    <div class="container">
        <div class="row">
            <!-- Begin Category Menu Area -->
            <div class="col-lg-3">
                <!--Category Menu Start-->
                <div class="category-menu" style="margin-bottom: 20px; margin-top: 20px;">
                    <div class="category-heading">
                        <h2 class="categories-toggle"><span class="font-weight-bold" style="font-family: Arial, Helvetica, sans-serif;">LOẠI SẢN PHẨM</span></h2>
                    </div>
                    <div id="cate-toggle" class="category-menu-list">
                        <ul id="category-list">
                            <% loaiSP.slice(0, 8).forEach(function(loaisp) { %>
                                <li style="margin-top: 10px;">
                                    <img width="32" src="<%= loaisp.Icon %>" alt="" > &nbsp;
                                    <span><a style="font-size: 15px;" href="/shop-list-category-product?idLoaiSP=<%= loaisp._id %>"><%= loaisp.TenLoaiSP %></a></span>
                                </li>
                            <% }) %>
                            <% if (loaiSP.length > 8) { %>
                                <% loaiSP.slice(8).forEach(function(loaisp) { %>
                                <li class="rx-child hidden" style="margin-top: 10px;">
                                    <img width="32" src="<%= loaisp.Icon %>" alt="" > &nbsp;
                                    <span><a style="font-size: 15px;" href="/shop-list-category-product?idLoaiSP=<%= loaisp._id %>"><%= loaisp.TenLoaiSP %></a></span>
                                </li>
                                <% }) %>
                                <li class="rx-parent">
                                    <a class="rx-default" href="javascript:void(0)" onclick="toggleCategories()">Xem Thêm</a>
                                    <a class="rx-show hidden" href="javascript:void(0)" onclick="toggleCategories()">Ẩn Bớt</a>
                                </li>
                            <% } %>
                        </ul>
                        <script>
                            function toggleCategories() {
                                const hiddenItems = document.querySelectorAll('.rx-child.hidden');
                                const moreLink = document.querySelector('.rx-default');
                                const lessLink = document.querySelector('.rx-show');

                                hiddenItems.forEach(item => {
                                    item.classList.toggle('hidden');
                                });

                                moreLink.classList.toggle('hidden');
                                lessLink.classList.toggle('hidden');
                            }
                        </script>
                    </div>
                </div>
                <!--Category Menu End-->
            </div>
            <!-- Category Menu Area End Here -->
            <!-- Begin Slider Area -->
            <div class="col-lg-9">
                <div class="slider-area pt-sm-30 pt-xs-30">
                    <div class="slider-active owl-carousel" style="margin-bottom: 20px; margin-top: 20px;">
                        <!-- Begin Single Slide Area -->
                        <div class="single-slide align-center-left animation-style-02 bg-4">
                            <div class="slider-progress"></div>
                           
                        </div>
                        <!-- Single Slide Area End Here -->
                        <!-- Begin Single Slide Area -->
                        <div class="single-slide align-center-left animation-style-01 bg-5">
                            <div class="slider-progress"></div>
                           
                        </div>
                        <!-- Single Slide Area End Here -->
                        <!-- Begin Single Slide Area -->
                        <div class="single-slide align-center-left animation-style-02 bg-6">
                            <div class="slider-progress"></div>
                           
                        </div>
                        <!-- Single Slide Area End Here -->
                    </div>
                </div>
            </div>
            <!-- Slider Area End Here -->
        </div>
    </div>
</div>